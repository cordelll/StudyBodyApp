<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:id="@+id/quickAnalyzebtn"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/quick_analysis_btn_selector"
            android:textStyle="bold"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:id="@+id/lbl_status"
            android:layout_marginLeft="7dp"
            android:textColor="#f2f2f2"
            android:layout_toRightOf="@+id/quickAnalyzebtn"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ready"
            android:id="@+id/txt_status"
            android:layout_marginLeft="7dp"
            android:textColor="#f2f2f2"
            android:layout_toRightOf="@+id/lbl_status"
            android:textSize="15dp"/>


        <TextView
            android:textColor="#f2f2f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recovery level"
            android:id="@+id/lbl_recovery_level"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="7dp"
            android:layout_below="@+id/lbl_status"
            android:layout_toRightOf="@+id/quickAnalyzebtn"
            android:textSize="15dp"/>

        <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:id="@+id/recovery_level_progressBar"
            android:layout_below="@+id/lbl_recovery_level"
            android:layout_toRightOf="@+id/quickAnalyzebtn"
            android:layout_marginLeft="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recovery_level_percents"
            android:layout_marginLeft="7dp"
            android:layout_below="@+id/recovery_level_progressBar"
            android:textColor="#f2f2f2"
            android:layout_toRightOf="@+id/quickAnalyzebtn"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/recovery_feed"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:textColor="#f2f2f2"
            android:textSize="15dp"
            android:layout_below="@+id/avg_HR" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/avg_HR"
            android:textColor="#f2f2f2"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/quickAnalyzebtn"
            android:textSize="15dp"/>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/cordell/AndroidStudioProjects/StudyBody_ver.7%20(10.07.2016)/Application/src/main/res/layout/quick_analysis_fragment.xml -->